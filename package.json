{
  "name": "david-eadie-net",
  "version": "1.0.0",
  "main": "dist/index.html",
  "repository": "git@github.com:TheEadie/David.Eadie.Net.git",
  "author": "David Eadie",
  "license": "MIT",
  "scripts": {
    "start": "concurrently \"yarn watch\" \"yarn serve dist\"",
    "watch": "watch 'yarn build' ./src/",
    "build": "yarn build:pages && yarn build:css",
    "build:pages": "mkdir -p ./dist/ && cp -r ./src/* ./dist/",
    "build:css": "NODE_ENV=production npx tailwindcss build ./src/app.css -o ./dist/index.css",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "autoprefixer": "^9.8.4",
    "concurrently": "^5.3.0",
    "postcss-cli": "^7.1.1",
    "postcss-import": "^12.0.1",
    "serve": "^11.3.2",
    "tailwindcss": "^1.4.6",
    "watch": "^1.0.2"
  }
}
